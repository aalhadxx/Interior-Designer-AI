Write-Host "--- MOTHERBOARD & IDENTITY ---" -F Cyan; Get-CimInstance Win32_BaseBoard | Select-Object Manufacturer, Product, SerialNumber | Format-List; Write-Host "--- GAMING DISPLAY (REFRESH RATE) ---" -F Green; Get-CimInstance Win32_VideoController | Select-Object Name, @{n="Resolution";e={"$($_.CurrentHorizontalResolution) x $($_.CurrentVerticalResolution)"}}, @{n="RefreshRate(Hz)";e={$_.CurrentRefreshRate}} | Format-Table -AutoSize; Write-Host "--- NETWORK CARD (PRO/VPRO CHECK) ---" -F Green; Get-CimInstance Win32_NetworkAdapter | Where-Object {$_.PhysicalAdapter -eq $true} | Select-Object Name, Manufacturer, Speed | Format-Table -AutoSize; Write-Host "--- FINAL WARNINGS ---" -F Red; $ram = (Get-CimInstance Win32_PhysicalMemory | Measure-Object -Property Capacity -Sum).Sum / 1GB; if ($ram -lt 32) { Write-Host "!!! SCAM ALERT: THIS IS A ${ram}GB MACHINE, NOT 32GB !!!" -F Red -BackgroundColor Yellow } else { Write-Host "RAM Verified: 32GB" -F Green }
